<!DOCTYPE html>
<html>
    <head>
            <link rel="stylesheet" 
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
            integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
             crossorigin="anonymous">
    </head>
    <body>
        <% include partials/siteBanner %>
        <% include partials/navBar%>
        <div>
            
        </div>
        <form action="/addGame" method='POST'>
            <div class = 'form-group'>
                    <select name='map'>
                            <option value='battlefield'>Battlefield</option>
                            <option value='finalDestination'>Final Destination</option>
                            <option value='other'>Other</option>
                        </select>
            </div>
            <% for(var i = 0; i < numberOfPlayers; i++){%>
                <label for='player<%=i+1%>'>Player<%=i+1%></label>
                <input type='text' name='player<%=i+1%>'>
                <label for='player<%=i+1%>'>Player<%=i+1%> Character</label>
                <input type='text' name='player<%=i+1%>Character'>
                <label for='player<%=i+1%>'>Player<%=i+1%> Kills</label>
                <input type='text' name='player<%=i+1%>Kills'>
                <label for='player<%=i+1%>'>Player<%=i+1%> Deaths</label>
                <input type='text' name='player<%=i+1%>Deaths'>
            <%}%>
            
            <input type="submit" value="submit">
        </form>
        
    </body>
</html>